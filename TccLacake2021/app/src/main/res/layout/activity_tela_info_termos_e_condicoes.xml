<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_padrao"
    tools:context=".tela_info_termos_e_condicoes">

    <RelativeLayout
        android:id="@+id/voltarEtermos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/voltar"
            android:id="@+id/voltarBotao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/texto_termos"
            />

        <TextView
            android:id="@+id/texto_termos"
            style="@style/textoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Termos e Condições"
            />

    </RelativeLayout>


    <View
        android:id="@+id/divisor_termos"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:background="@color/marrom1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voltarEtermos"
        />

</androidx.constraintlayout.widget.ConstraintLayout>